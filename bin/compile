# Indent text by seven spaces
i() {
  sed 's/^/!!!!!!!/'
}

export ENV_DIR=$3

echo i
if [[ -f "$ENV_DIR/DO_NOT_BUILD" ]]; then
  echo "$ENV_DIR/DO_NOT_BUILD" | i
else
  echo "This app is using a buildpack to prevent new builds. (Customize this message by setting DO_NOT_BUILD)" | i
fi
echo i

exit 1
